<style type="text/css">
    table thead tr th, table tbody tr td {
        font-size: 24px;
    }

    table .btn {
        padding: 3px 12px;
    }
</style>

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <br>
                <h1>Users Index</h1>
                <hr><br>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <% if user.admin? %>
                                <td><%= user.username %> <span style="font-size: 12px" class="badge badge-danger align-text-top">ADMIN</span></td>
                            <% else %>    
                                <td><%= user.username %></td>
                            <% end %>
                            <td>
                                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>
                                <% if user.username == current_user.username %>
                                <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger disabled', hidden: false %>
                                <% else %>
                                <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger', hidden: false %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <%= link_to "Create New User", new_user_path, :class => "btn btn-sm btn-outline-success", hidden: false %>
    </div>
</section>