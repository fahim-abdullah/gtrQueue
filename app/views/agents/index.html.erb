<style type="text/css">
    table thead tr th, table tbody tr td {
        font-size: 24px;
    }

    table .btn {
        padding: 3px 12px;
    }
</style>

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <br>
                <h1>Agents Index</h1>
                <hr><br>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Agent Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @agents.each do |agent| %>
                        <tr>
                            <td><%= agent.id %></td>
                            <td><%= agent.name %></td>
                            <td>
                                <%= link_to 'Edit', edit_agent_path(agent), class: 'btn btn-warning' %>
                                <%= link_to 'Show', agent_path(agent), class: 'btn btn-primary' %>
                                <%= link_to 'Delete', agent_path(agent), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <%= link_to "Create New Agent", new_agent_path, :class => "btn btn-sm btn-outline-success" %>
    </div>
</section>