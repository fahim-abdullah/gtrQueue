<style type="text/css">
    table thead tr th, table tbody tr td {
        font-size: 24px;
    }

    table .btn {
        padding: 3px 12px;
    }
</style>

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <br>
                <h1>staffs Index</h1>
                <hr><br>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Staff ID</th>
                            <th>staff Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @staffs.each do |staff| %>
                        <tr>
                            <td><%= staff.staff_id %></td>
                            <td><%= staff.name %></td>
                            <td>
                                <%= link_to 'Edit', edit_staff_path(staff), class: 'btn btn-warning' %>
                                <%= link_to 'Show', staff_path(staff), class: 'btn btn-primary' %>
                                <%= link_to 'Delete', staff_path(staff), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <%= link_to "Create New staff", new_staff_path, :class => "btn btn-sm btn-outline-success" %>
    </div>
</section>