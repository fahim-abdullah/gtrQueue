<!DOCTYPE html>
<html>
  <head>
    <title>GTR Queue</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.4.0/css/bootstrap4-toggle.min.css' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.4.0/js/bootstrap4-toggle.min.js' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <%= image_tag("rcLogo.png", width: '85px') %> | 
                <%= image_tag("gtrLogo3.png", width: '100px') %>
            </a>
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" style="border-color: rgb(120,120,120); border-radius:2px; padding: 4px 8px">
                <%= image_tag("ham.png", width: '28px') %>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <%= link_to "Create Order", new_order_path, :class => 'nav-link' %>
                    </li>

                    <li class="nav-item">
                        <%= link_to "Delivery Requests", requests_path, :class => 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Check Status", status_path, :class => 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Delivery Area", :class => 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Progress", progress_path, :class => 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to image_tag("icons8-expand-filled-96.png", width: '18px'), '', :onclick => 'toggleFullscreen()', :id => 'btnFullscreen', :class => 'nav-link' %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <%= yield %>
  </body>

</html>
